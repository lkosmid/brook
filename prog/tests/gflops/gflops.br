// sum.br
// The absolute minimal test. It tests
// using a kernel to sum both 1-dimensional
// and two-dimensional input streams.

#include <stdio.h>


void resetTimer(void);
float getTimer(void);

kernel void gflop( float a<>, out float c<> ) {
  c = a;
  c += a*c;
  c += a*c;
  c += a*c;
  c += a*c;
  c += a*c;
  c += a*c;
  c += a*c;
  c += a*c;
  c += a*c;
  c += a*c;
  c += a*c;
  c += a*c;
  c += a*c;
  c += a*c;
  c += a*c;
  c += a*c;
}

